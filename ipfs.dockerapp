---
version: 0.4.10-2
name: ipfs
description: "IPFS stack to run an InterPlanetary File System"
maintainers:
- name: Christian Kniep
  email: christian@qnib.org
targets:
  swarm: true
  kubernetes: false
---
version: '3.6'
services:
  daemon:
    image: qnib/plain-ipfs:v0.4.10-2
    ports:
        - "5001:5001"
        - "4001:4001"
        - "8080:8080"
    environment:
        IPFS_BIND_IP: "0.0.0.0"
        #IPFS_BOOTSTRAP_RM_ALL: "true"
    healthcheck:
        disable: true
---
